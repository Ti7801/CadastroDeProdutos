@model BibliotecaBusiness.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h2>Excluir Produto</h2>

<h3>Tem certeza de que deseja excluir este produto?</h3>
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorProduto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorProduto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisponivelVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DisponivelVenda)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
